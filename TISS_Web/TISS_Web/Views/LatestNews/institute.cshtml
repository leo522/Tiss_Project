@model IEnumerable<TISS_Web.Models.ArticleContentModel>
@{
    Layout = "~/Views/Shared/_TissMaster.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/site/css/MenuLinkStyle.css" rel="stylesheet" />
    <link href="~/site/css/ViewArticle.css" rel="stylesheet" />
</head>
<body>
    <div id="app" data-v-app="">
        <div data-v-339da53a="" class="layout">
            <div data-v-339da53a="" class="container-fluid px-0 mt-header">
                <div data-v-339da53a-s="" class="BasePageLayout">
                    <div class="BasePageBanner">
                        <div class="Mask">
                        </div>
                        <img class="PageBannerItemBg d-none d-lg-block" src="/site/img/news_banner.856d4a80.jpg" alt="" />
                        <img class="PageBannerItemBg d-block d-lg-none" src="/site/img/banner_announcement.1b73bdab.jpg" alt="" />
                        <div class="container">
                            <div class="Title">
                                <h1 class="BannerTitle" title="nnouncements">
                                    Announcements
                                </h1>
                                <h2 class="BannerSubTitle">
                                    <img class="icon" src="/site/img/title_icon_white.5e98ec4e.svg" alt="" />中心公告
                                </h2>
                            </div>
                        </div>
                    </div>
                    <section class="el-container">
                        <aside class="el-aside" role="navigation" aria-labelledby="sidebar-title">
                            <h2 id="sidebar-title" class="sr-only">左方功能區塊</h2>
                            <div class="BaseBreadcrumb d-block d-lg-none">
                                <div class="container">
                                    <div class="el-breadcrumb" aria-label="Breadcrumb" role="navigation" aria-current="page">
                                        <span class="el-breadcrumb__item">
                                            <a class="el-breadcrumb__inner is-link" role="link" href="/Tiss/Home" title="首頁">首頁</a>
                                            <i class="el-icon el-breadcrumb__separator">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                    <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                    </path>
                                                </svg>
                                            </i>
                                        </span>
                                        <span class="el-breadcrumb__item">
                                            <span class="el-breadcrumb__inner" title="最新消息">最新消息</span>
                                            <i class="el-icon el-breadcrumb__separator">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                    <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                    </path>
                                                </svg>
                                            </i>
                                        </span>
                                        <span class="el-breadcrumb__item" aria-current="page">
                                            <span class="el-breadcrumb__inner" title="中心公告">中心公告</span>
                                            <i class="el-icon el-breadcrumb__separator">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                    <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                    </path>
                                                </svg>
                                            </i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            @*左方功能區塊*@
                            <div class="content" aria-live="polite">
                                <a href="#L" title="左方功能區塊" accesskey="L" class="alt-c" style="margin-left: 100px;">:::</a>
                                <h2 class="Title" title="中心公告">中心公告</h2>
                                <ul class="Menu" aria-labelledby="sidebar-title">
                                    <li span="3">
                                        <a class="MenuLink" href="/LatestNews/announcement" title="全部文章" aria-label="查看全部文章">全部文章</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/LatestNews/press" title="新聞發佈" aria-label="查看運科中心的新聞發佈">新聞發佈</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/LatestNews/institute" title="中心訊息" aria-label="查看運科中心的中心訊息">中心訊息</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/LatestNews/recruit" title="徵才招募" aria-label="查看運科中心的徵才招募">徵才招募</a>
                                    </li>
                                    @{
                                        if (Session["LoggedIn"] != null && (bool)Session["LoggedIn"])
                                        {
                                            <li span="3">
                                                <a class="MenuLink" href="/Article/ArticleCreate" style="color:orange" title="新增文章">新增文章</a>
                                            </li>
                                        }
                                    }
                                </ul>
                            </div>
                        </aside>
                        <main class="el-main bg-white">
                            <div class="MainContainer" aria-live="polite">
                                <div class="BaseBreadcrumb d-none d-lg-block">
                                    <div class="container">
                                        <div class="el-breadcrumb" aria-label="Breadcrumb" role="navigation">
                                            <span class="el-breadcrumb__item">
                                                <a class="el-breadcrumb__inner is-link" role="link" href="/Tiss/Home" title="首頁">首頁</a>
                                                <i class="el-icon el-breadcrumb__separator" aria-hidden="true">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                        <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                        </path>
                                                    </svg>
                                                </i>
                                            </span>
                                            <span class="el-breadcrumb__item">
                                                <span class="el-breadcrumb__inner" title="最新消息">最新消息</span>
                                                <i class="el-icon el-breadcrumb__separator">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                        <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                        </path>
                                                    </svg>
                                                </i>
                                            </span>
                                            <span class="el-breadcrumb__item" aria-current="page">
                                                <span class="el-breadcrumb__inner" title="中心公告">中心公告</span>
                                                <i class="el-icon el-breadcrumb__separator">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                        <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                        </path>
                                                    </svg>
                                                </i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*中央內容區塊*@
                            <div id="main_content">
                                <div class="MainContainer" id="Ca">
                                    <div class="AnnouncementList">
                                        <a href="#Ca" title="中央內容區塊" accesskey="C" name="C" id="jump-to-Ca" class="alt-c">:::</a>
                                        <div class="container">
                                            <div class="row">
                                                @foreach (var article in Model)
                                                {
                                                    <div class="col-md-4 mb-4">
                                                        <div class="NewsItemBox" tabindex="0" onclick="window.location.href='@Url.Action("ViewArticle", "Article", new { encryptedUrl = article.EncryptedUrl })';" role="link">
                                                            <div class="NewsItemImg">
                                                                @if (article.ImageContent != null)
                                                                {
                                                                    string base64Image = Convert.ToBase64String(article.ImageContent);
                                                                    <img src="data:image/png;base64,@base64Image" alt="圖片" />
                                                                }
                                                                <div class="tag">@article.ContentType</div>
                                                                <div class="Mask" title="閱讀更多">閱讀更多</div>
                                                            </div>
                                                            <span class="el-text is-line-clamp NewsItemTitle">@article.Title</span>
                                                            <div class="NewsItemContent">
                                                                <span class="el-text is-line-clamp">@article.BodyContent</span>
                                                            </div>
                                                        </div>
                                                        <div class="tag-date-container">
                                                            <div class="el-tag el-tag--plain is-round">
                                                                <div class="el-tag__content">@article.Hashtags</div>
                                                            </div>
                                                            <div class="date-tag">@article.FormattedCreateDate</div>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="Pagination">
                                        <div class="container">
                                            <nav aria-label="Page navigation">
                                                <ul class="pagination justify-content-center">
                                                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                                    {
                                                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                                            <a class="page-link" href="@Url.Action("institute", "LatestNews", new { page = i })" aria-label="跳到第 @i 頁">@i</a>
                                                        </li>
                                                    }
                                                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                                        <a class="page-link" href="@Url.Action("institute", "LatestNews", new { page = ViewBag.CurrentPage - 1 })" aria-label="前一頁">
                                                            <span aria-hidden="true">&laquo;</span>
                                                        </a>
                                                    </li>
                                                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                                        <a class="page-link" href="@Url.Action("institute", "LatestNews", new { page = ViewBag.CurrentPage + 1 })" aria-label="下一頁">
                                                            <span aria-hidden="true">&raquo;</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </nav>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </main>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <script>
    //登出按鈕顯示功能
$(document).ready(function () {
    var isLoggedIn = '@Session["LoggedIn"]' == 'True';

if (isLoggedIn) {
    $('#logoutBtn').show(); //顯示登出按鈕
} else {
    $('#loginBtn').show(); //顯示登入按鈕
    }
        loadContent(); //加載已儲存的內容
});

        //顯示當前選擇的子項目
        document.addEventListener('DOMContentLoaded', function () {
            var currentUrl = window.location.pathname;
            var menuLinks = document.querySelectorAll('.MenuLink');

            menuLinks.forEach(function (link) {

                if (link.getAttribute('href') === currentUrl) {
                    link.classList.add('active');
                    link.focus();  // 修改: 焦點移至當前選項
                }
            });
        });

    document.querySelector('#jump-to-Ca').addEventListener('click', function (e) {
        e.preventDefault(); // 阻止預設的跳轉行為
        var target = document.querySelector('#Ca');
        var offset = 100; // 偏移量，根據頁首的高度來設置
        var targetPosition = target.getBoundingClientRect().top + window.pageYOffset - offset;
        window.scrollTo({
            top: targetPosition,
            behavior: 'smooth' // 平滑滾動效果
        });
    });
    </script>
</body>
</html>