@{
    Layout = "~/Views/Shared/_TissMaster.cshtml";
}
@model PagedList.IPagedList<TISS_Web.Models.PurchaseDocumentModel>
@using PagedList.Mvc;
<!DOCTYPE html>
<html>
<head>
    <link href="~/site/css/MenuLinkStyle.css" rel="stylesheet" />
</head>
<body>
    <div id="fb-root"></div>
    <div id="app" data-v-app="">
        <div data-v-339da53a="" class="layout">
            <div data-v-339da53a="" class="container-fluid px-0 mt-header">
                <div data-v-339da53a-s="" class="BasePageLayout">
                    <div class="BasePageBanner">
                        <div class="Mask">
                        </div>
                        <img class="PageBannerItemBg d-none d-lg-block" src="/site/img/banner_public.db4e1f02.jpg" alt="">
                        <img class="PageBannerItemBg d-block d-lg-none" src="/site/img/banner_public_m.8febbec3.jpg" alt="">
                        <div class="container">
                            <div class="Title">
                                <div class="BannerTitle">
                                    Public Information
                                </div>
                                <div class="BannerSubTitle">
                                    <img class="icon" src="/site/img/title_icon_white.5e98ec4e.svg" alt="">公開資訊
                                </div>
                            </div>
                        </div>
                    </div>
                    <section class="el-container">
                        <aside class="el-aside" style="">
                            <div class="BaseBreadcrumb d-block d-lg-none">
                                <div class="container">
                                    <div class="el-breadcrumb" aria-label="Breadcrumb" role="navigation">
                                        <span class="el-breadcrumb__item">
                                            <a class="el-breadcrumb__inner is-link" role="link" href="/Tiss/Home">首頁</a>
                                            <i class="el-icon el-breadcrumb__separator">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                    <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                    </path>
                                                </svg>
                                            </i>
                                        </span>
                                        <span class="el-breadcrumb__item">
                                            <span class="el-breadcrumb__inner" role="link">公開資訊</span>
                                            <i class="el-icon el-breadcrumb__separator">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                    <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                    </path>
                                                </svg>
                                            </i>
                                        </span>
                                        <span class="el-breadcrumb__item">
                                            <span class="el-breadcrumb__inner" role="link">採購作業實施規章</span>
                                            <i class="el-icon el-breadcrumb__separator">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                    <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                    </path>
                                                </svg>
                                            </i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="content">
                                <div class="Title">公開資訊</div>
                                <ul class="Menu">
                                    <li span="3">
                                        <a class="MenuLink" href="/Tiss/regulation">法規</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/Tiss/procedure">辦法及要點</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/Tiss/plan">計畫</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/Tiss/budget">預算與決算</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/Tiss/download">下載專區</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/Tiss/purchase">採購作業實施規章</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/Tiss/other">其他</a>
                                    </li>
                                </ul>
                            </div>
                        </aside>
                        <main class="el-main bg-defaultO4">
                            <div class="MainContainer">
                                <div class="BaseBreadcrumb d-none d-lg-block">
                                    <div class="container">
                                        <div class="el-breadcrumb" aria-label="Breadcrumb" role="navigation">
                                            <span class="el-breadcrumb__item">
                                                <a class="el-breadcrumb__inner is-link" role="link" href="/Tiss/Home">首頁</a>
                                                <i class="el-icon el-breadcrumb__separator">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                        <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                        </path>
                                                    </svg>
                                                </i>
                                            </span>
                                            <span class="el-breadcrumb__item">
                                                <span class="el-breadcrumb__inner" role="link">公開資訊</span>
                                                <i class="el-icon el-breadcrumb__separator">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                        <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                        </path>
                                                    </svg>
                                                </i>
                                            </span>
                                            <span class="el-breadcrumb__item">
                                                <span class="el-breadcrumb__inner" role="link">採購作業實施規章</span>
                                                <i class="el-icon el-breadcrumb__separator">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                        <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                        </path>
                                                    </svg>
                                                </i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="PublicInfo">
                                <span id="Regulation" class="anchor">
                                </span>
                                <span id="Methods" class="anchor">
                                </span>
                                <span id="Plan" class="anchor">
                                </span>
                                <span id="Budget" class="anchor">
                                </span>
                                <span id="Download" class="anchor">
                                </span>
                                <span id="Purchase" class="anchor">
                                </span>
                                <span id="Other" class="anchor">
                                </span>
                                <div class="content">
                                    <div class="subTitle">
                                        採購作業實施規章
                                        <span class="primary">Purchase</span>
                                    </div>
                                    <div class="infoList">
                                        <div class="d-none d-lg-block">
                                            <div class="el-auto-resizer" style="width: 100%; height: 100%;">
                                                <div class="el-table-v2 el-table-v2__root" style="height: 550px; width: 870px;">
                                                    <div role="table" class="el-table-v2__table el-table-v2__main">
                                                        <div class="el-vl__wrapper el-table-v2__body" role="rowgroup">
                                                            <div class="" style="position: relative; overflow: hidden; will-change: transform; direction: ltr; height: 500px; width: 870px;">
                                                                <div class="el-table-v2__header-wrapper" role="rowgroup">
                                                                    <div class="el-table-v2__header" style="height: 50px;">
                                                                        <div class="el-table-v2__header-row TableRow el-table-v2__dynamic-header-row" style="height: 50px;">
                                                                            <div class="el-table-v2__header-cell" data-key="title" role="columnheader" style="width: 480px;">
                                                                                <div class="el-table-v2__header-cell-text" title="名稱">名稱</div>
                                                                            </div>
                                                                            <div class="el-table-v2__header-cell" data-key="publish_up" role="columnheader" style="width: 240px;">
                                                                                <div class="el-table-v2__header-cell-text" title="發布日期">發布日期</div>
                                                                            </div>
                                                                            <div class="el-table-v2__header-cell" data-key="params" role="columnheader" style="width: 280px;">
                                                                                <div class="el-table-v2__header-cell-text" title="附件">附件</div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="form-group" style="height: 450px; overflow-y: auto; font-size:16px;">
                                                                    @foreach (var file in Model)
                                                                    {
                                                                        <div class="el-table-v2__row TableRow" style="margin-bottom: 20px; padding: 5px;">
                                                                            <div class="el-table-v2__row-cell" style="width: 480px;">
                                                                                <div class="el-table-v2__cell-text">@file.DocumentName.Substring(0, file.DocumentName.LastIndexOf('.'))</div>
                                                                            </div>
                                                                            <div class="el-table-v2__row-cell" style="width: 240px;">
                                                                                <div>@file.UploadTime.ToString("yyyy/MM/dd")</div>
                                                                            </div>
                                                                            <div class="el-table-v2__row-cell" style="width: 280px;">
                                                                                <div class="BaseTagList download">
                                                                                    <span>
                                                                                        <a href="~/storage/media/attachments/@file.DocumentName" target="_blank">
                                                                                            <span class="el-tag el-tag--light is-round">
                                                                                                <span class="el-tag__content">@file.DocumentType</span>
                                                                                            </span>
                                                                                        </a>
                                                                                    </span>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    }
                                                                    <nav aria-label="Page navigation">
                                                                        <ul class="pagination justify-content-center">
                                                                            @Html.PagedListPager(Model, page => Url.Action("purchase", new { page }),
        new PagedListRenderOptions
        {
            DisplayLinkToFirstPage = PagedListDisplayMode.IfNeeded,
            DisplayLinkToLastPage = PagedListDisplayMode.IfNeeded,
            DisplayLinkToPreviousPage = PagedListDisplayMode.IfNeeded,
            DisplayLinkToNextPage = PagedListDisplayMode.IfNeeded,
            DisplayLinkToIndividualPages = true,
            LinkToFirstPageFormat = "<< 第一頁",
            LinkToPreviousPageFormat = "< 前一頁",
            LinkToNextPageFormat = "後一頁 >",
            LinkToLastPageFormat = "最末頁 >>",
            DisplayPageCountAndCurrentLocation = true,
            PageCountAndCurrentLocationFormat = "第{0}頁/共 {1}頁",
            DisplayItemSliceAndTotal = true,
            ItemSliceAndTotalFormat = "顯示項目：{0}~{1},共{2}項"
        })
                                                                        </ul>
                                                                    </nav>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                @{
                                                    if (Session["LoggedIn"] != null && (bool)Session["LoggedIn"])
                                                    {
                                                        using (Html.BeginForm("UploadPurchaseDocument", "Tiss", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                                        {
                                                            <label for="file" class="control-label col-md-2">選擇檔案</label>
                                                            <div class="col-md-10">
                                                                <input type="file" name="file" />
                                                                <input type="submit" value="上傳檔案" class="btn btn-outline-success" />
                                                            </div>
                                                        }
                                                    }
                                                }

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </main>
                    </section>
                </div>
            </div>

            <div data-v-339da53a="" class="el-backtop GoTop" style="right: 40px; bottom: 40px;">
                <svg data-v-339da53a="" class="svg-inline--fa fa-chevron-up" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="chevron-up" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                    <path class="" fill="currentColor" d="M233.4 105.4c12.5-12.5 32.8-12.5 45.3 0l192 192c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L256 173.3 86.6 342.6c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3l192-192z">
                    </path>
                </svg>
            </div>
        </div>
    </div>
    <script>
$(document).ready(function () {
    var isLoggedIn = '@Session["LoggedIn"]' == 'True';

if (isLoggedIn) {
    $('#logoutBtn').show(); //顯示登出按鈕
} else {
    $('#loginBtn').show(); //顯示登入按鈕
    }
        loadContent(); //加載已儲存的內容
});

        //顯示當前被選擇的子目錄
        document.addEventListener('DOMContentLoaded', function () {
            var currentUrl = window.location.pathname;
            var menuLinks = document.querySelectorAll('.MenuLink');

            menuLinks.forEach(function (link) {
                if (link.getAttribute('href') === currentUrl) {
                    link.classList.add('active');
                }
            });
        });
    </script>
</body>
</html>