@model IEnumerable<TISS_Web.Models.DocumentModel>
@{
    Layout = "~/Views/Shared/_TissMaster.cshtml";

}
<!DOCTYPE html>
<html>
<head>
    <link href="~/site/css/MenuLinkStyle.css" rel="stylesheet" />
    <link href="~/site/css/ViewArticle.css" rel="stylesheet" />
</head>
<body>
    <div id="app" data-v-app="">
        <div data-v-339da53a="" class="layout">
            <div data-v-339da53a="" class="container-fluid px-0 mt-header">
                <div data-v-339da53a-s="" class="BasePageLayout">
                    <div class="BasePageBanner">
                        <div class="Mask"></div>
                        <img class="PageBannerItemBg d-none d-lg-block" src="/site/img/banner_public.db4e1f02.jpg" alt="" />
                        <img class="PageBannerItemBg d-block d-lg-none" src="/site/img/banner_public_m.8febbec3.jpg" alt="" />
                        <div class="container">
                            <div class="Title">
                                <h1 class="BannerTitle" title="Public Information">
                                    Public Information
                                </h1>
                                <h2 class="BannerSubTitle">
                                    <img class="icon" src="/site/img/title_icon_white.5e98ec4e.svg" alt="" />公開資訊
                                </h2>
                            </div>
                        </div>
                    </div>
                    <section class="el-container">
                        <aside class="el-aside" role="navigation" aria-labelledby="sidebar-title">
                            <h2 id="sidebar-title" class="sr-only">功能區塊</h2>
                            <div class="BaseBreadcrumb d-block d-lg-none">
                                <div class="container">
                                    <div class="el-breadcrumb" aria-label="Breadcrumb" role="navigation" aria-current="page">
                                        <span class="el-breadcrumb__item">
                                            <a class="el-breadcrumb__inner is-link" role="link" href="/Tiss/Home" title="首頁">首頁</a>
                                            <i class="el-icon el-breadcrumb__separator">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                    <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                    </path>
                                                </svg>
                                            </i>
                                        </span>
                                        <span class="el-breadcrumb__item">
                                            <span class="el-breadcrumb__inner" title="公開資訊">公開資訊</span>
                                            <i class="el-icon el-breadcrumb__separator">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                    <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                    </path>
                                                </svg>
                                            </i>
                                        </span>
                                        <span class="el-breadcrumb__item">
                                            <span class="el-breadcrumb__inner" title="法規">法規</span>
                                            <i class="el-icon el-breadcrumb__separator">
                                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                    <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                    </path>
                                                </svg>
                                            </i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            @*左方功能區塊*@
                            <div class="content" aria-live="polite">
                                <a href="#L" title="左方功能區塊" accesskey="L" class="alt-c" style="margin-left: 100px;">:::</a>
                                <h2 class="Title" title="公開資訊">公開資訊</h2>
                                <ul class="Menu">
                                    <li span="3">
                                        <a class="MenuLink" href="/Tiss/regulation" title="法規">法規</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/Tiss/procedure" title="辦法及要點">辦法及要點</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/Tiss/plan" title="計畫">計畫</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/Tiss/budget" title="預算與決算">預算與決算</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/Tiss/download" title="下載專區">下載專區</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/Tiss/GenderEquality" title="性別平等專區">性別平等專區</a>
                                    </li>
                                    <li span="3">
                                        <a class="MenuLink" href="/Tiss/other" title="其他">其他</a>
                                    </li>
                                </ul>
                            </div>
                        </aside>
                        <main class="el-main bg-defaultO4">
                            <div class="MainContainer" aria-live="polite">
                                <div class="BaseBreadcrumb d-none d-lg-block">
                                    <div class="container">
                                        <div class="el-breadcrumb" aria-label="Breadcrumb" role="navigation">
                                            <span class="el-breadcrumb__item">
                                                <a class="el-breadcrumb__inner is-link" role="link" href="/Tiss/Home" title="首頁">首頁</a>
                                                <i class="el-icon el-breadcrumb__separator">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                        <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                        </path>
                                                    </svg>
                                                </i>
                                            </span>
                                            <span class="el-breadcrumb__item">
                                                <span class="el-breadcrumb__inner" title="公開資訊">公開資訊</span>
                                                <i class="el-icon el-breadcrumb__separator">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                        <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                        </path>
                                                    </svg>
                                                </i>
                                            </span>
                                            <span class="el-breadcrumb__item">
                                                <span class="el-breadcrumb__inner" title="法規">法規</span>
                                                <i class="el-icon el-breadcrumb__separator">
                                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1024 1024">
                                                        <path fill="currentColor" d="M340.864 149.312a30.592 30.592 0 0 0 0 42.752L652.736 512 340.864 831.872a30.592 30.592 0 0 0 0 42.752 29.12 29.12 0 0 0 41.728 0L714.24 534.336a32 32 0 0 0 0-44.672L382.592 149.376a29.12 29.12 0 0 0-41.728 0z">
                                                        </path>
                                                    </svg>
                                                </i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*中央內容區塊*@
                            <div id="main_content">
                                <div class="PublicInfo" id="Ca">
                                    <a href="#Ca" title="中央內容區塊" accesskey="C" name="C" id="jump-to-Ca" class="alt-c">:::</a>
                                    <span id="Regulation" class="anchor"></span>
                                    <span id="Methods" class="anchor"></span>
                                    <span id="Plan" class="anchor"></span>
                                    <span id="Budget" class="anchor"></span>
                                    <span id="Download" class="anchor"></span>
                                    <span id="Purchase" class="anchor"></span>
                                    <span id="Other" class="anchor"></span>
                                    <div class="content">
                                        <h2 class="subTitle" title="法規">
                                            法規
                                            <span class="primary" title="Regulation">Regulation</span>
                                        </h2>
                                    </div>
                                    <div class="infoList">
                                        <div class="el-auto-resizer" style="width: 100%; height: 100%;">
                                            <div class="el-table-v2 el-table-v2__root" style="height: 550px; width: 870px;">
                                                <div class="el-table-v2__table el-table-v2__main">
                                                    <table>
                                                        <thead>
                                                            <tr>
                                                                <th scope="col" style="width: 480px; padding: 10px;">名稱</th>
                                                                <th scope="col" style="width: 240px; padding: 10px;">發布日期</th>
                                                                <th scope="col" style="width: 280px; padding: 10px;">附件</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @if (!Model.Any())
                                                            {
                                                                <tr>
                                                                    <td colspan="3" style="text-align:center; padding: 20px;">
                                                                        目前沒有任何文件資料。
                                                                    </td>
                                                                </tr>
                                                            }
                                                            else
                                                            {
                                                                foreach (var file in Model)
                                                                {
                                                                    <tr style="margin-bottom: 20px; padding: 5px;">
                                                                        <td style="width: 600px; padding: 20px;">
                                                                            <a href="@Url.Action("DownloadFile", "Tiss", new { documentId = file.DocumentID })"
                                                                               target="_blank" title="@file.DocumentName 檔案下載 (另開新視窗)">
                                                                                <div title="@file.DocumentName 檔案下載 (另開新視窗)">
                                                                                    @file.DocumentName.Substring(0, file.DocumentName.LastIndexOf('.'))
                                                                                </div>
                                                                            </a>
                                                                        </td>
                                                                        <td style="width: 240px; padding: 10px;">
                                                                            @file.UploadTime.ToString("yyyy/MM/dd")
                                                                        </td>
                                                                        <td style="width: 280px; padding: 10px;">
                                                                            <div class="BaseTagList download">
                                                                                <a href="@Url.Action("DownloadFile", "Tiss", new { documentId = file.DocumentID })"
                                                                                   target="_blank" title="下載 @file.DocumentName 檔案下載 (另開新視窗)">
                                                                                    <span class="el-tag" style="background-color: firebrick; color: white; border-radius: 0; padding: 5px;">
                                                                                        @file.DocumentType
                                                                                    </span>
                                                                                </a>
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            }
                                                        </tbody>
                                                        <tfoot>
                                                            <tr>
                                                                <td colspan="3">
                                                                    <nav aria-label="Page navigation" style="display: flex; justify-content: center; margin-top: 30px;">
                                                                        <ul class="pagination">
                                                                            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                                                                <a class="page-link" href="@Url.Action("Public_Info", "Tiss", new { page = ViewBag.CurrentPage - 1 })" aria-label="Previous Page">
                                                                                    <span aria-hidden="true">&laquo;</span>
                                                                                </a>
                                                                            </li>
                                                                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                                                            {
                                                                                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                                                                    <a class="page-link" href="@Url.Action("Public_Info", "Tiss", new { page = i })">@i</a>
                                                                                </li>
                                                                            }
                                                                            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                                                                <a class="page-link" href="@Url.Action("Public_Info", "Tiss", new { page = ViewBag.CurrentPage + 1 })" aria-label="Next Page">
                                                                                    <span aria-hidden="true">&raquo;</span>
                                                                                </a>
                                                                            </li>
                                                                        </ul>
                                                                    </nav>
                                                                </td>
                                                            </tr>
                                                        </tfoot>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="upload-section" style="margin-top: 30px;">
                                        @{
                                            if (Session["LoggedIn"] != null && (bool)Session["LoggedIn"])
                                            {
                                                using (Html.BeginForm("UploadDocument", "Tiss", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                                {
                                                    <input type="hidden" name="category" value="Public_Info" /> <!-- 類別標識 -->
                                                    <label for="file" class="control-label col-md-2" title="選擇檔案">選擇檔案</label>
                                                    <div class="col-md-10" style="margin-bottom: 20px;">
                                                        <input type="file" name="file" />
                                                        <input type="submit" value="上傳檔案" class="btn btn-outline-success" />
                                                    </div>
                                                }
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </main>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <script>
       $(document).ready(function () {
    var isLoggedIn = '@Session["LoggedIn"]' == 'True';

if (isLoggedIn) {
    $('#logoutBtn').show(); //顯示登出按鈕
} else {
    $('#loginBtn').show(); //顯示登入按鈕
    }
        loadContent(); //加載已儲存的內容
});

        //顯示當前被選擇的子目錄
        document.addEventListener('DOMContentLoaded', function () {
            var currentUrl = window.location.pathname;
            var menuLinks = document.querySelectorAll('.MenuLink');

            menuLinks.forEach(function (link) {
                if (link.getAttribute('href') === currentUrl) {
                    link.classList.add('active');
                    link.focus();  // 修改: 焦點移至當前選項
                }
            });
        });

        //功能區塊
        document.querySelector('#jump-to-Ca').addEventListener('click', function (e) {
            e.preventDefault(); // 阻止預設的跳轉行為
            var target = document.querySelector('#Ca');
            var offset = 100; // 偏移量，根據頁首的高度來設置
            var targetPosition = target.getBoundingClientRect().top + window.pageYOffset - offset;
            window.scrollTo({
                top: targetPosition,
                behavior: 'smooth' // 平滑滾動效果
            });
        });
    </script>
</body>
</html>