@{
    Layout = "~/Views/Shared/_TissMaster.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>修改密碼</title>
</head>
<body>
    <noscript>您的瀏覽器不支援JavaScript功能，若本網站功能無法正常使用，請開啟瀏覽器JavaScript狀態</noscript>
    <div>
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <p style="color: red;">@ViewBag.ErrorMessage</p>
        }
        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
        {
            <p style="color: green;">@ViewBag.SuccessMessage</p>
        }
        <form method="post">
            <div>
                <label for="userName" title="帳號：">帳號：</label>
                <input type="text" id="userName" name="userName" value="@ViewBag.UserName" readonly />
            </div>
            <div>
                <label for="oldPwd" title="舊密碼：">舊密碼：</label>
                <input type="password" id="oldPwd" name="oldPwd" required />
            </div>
            <div>
                <label for="newPwd" title="新密碼：">新密碼：</label>
                <input type="password" id="newPwd" name="newPwd" required />
            </div>
            <button type="submit" title="修改密碼">修改密碼</button>
        </form>
    </div>
</body>
</html>