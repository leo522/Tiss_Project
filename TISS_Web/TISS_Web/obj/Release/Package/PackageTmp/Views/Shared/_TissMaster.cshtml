    <script>
        //網頁字體大小控制function
        document.querySelectorAll('.FontSizeBtn').forEach(button => {
            button.addEventListener('click', function () {
                const size = this.getAttribute('data-size');
                changeFontSize(size, this);
            });
        });

        function changeFontSize(size, element) {
            const htmlElement = document.querySelector('html');
            if (size === 'small') {
                htmlElement.style.fontSize = '14px';
            } else if (size === 'medium') {
                htmlElement.style.fontSize = '16px';
            } else if (size === 'large') {
                htmlElement.style.fontSize = '18px';
            }

            // 移除所有按鈕的 active 樣式
            const buttons = document.querySelectorAll('.FontSizeBtn');
            buttons.forEach(button => button.classList.remove('active'));

            // 為當前按鈕添加 active 樣式
            element.classList.add('active');
        }

        document.addEventListener('DOMContentLoaded', function () {
            var backTopButton = document.querySelector('.el-backtop');

            // 顯示或隱藏按鈕
            window.addEventListener('scroll', function () {
                if (window.scrollY > 1500) { // 滾動超過200px時顯示按鈕
                    backTopButton.classList.add('show');
                } else {
                    backTopButton.classList.remove('show');
                }
            });

            // 點擊按鈕時平滑滾動到頁面頂部
            backTopButton.addEventListener('click', function () {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            });
        });

        //鍵盤移動展開下拉選單
        document.addEventListener('DOMContentLoaded', function () {
            // 取得所有下拉選單項目
            const dropdownToggles = document.querySelectorAll('.nav-item.dropdown > a');

            dropdownToggles.forEach(dropdownToggle => {
                const dropdownMenu = dropdownToggle.nextElementSibling;

                // 點擊事件處理
                dropdownToggle.addEventListener('click', function (event) {
                    //event.preventDefault();開啟會導致超連結失效
                    toggleDropdown(dropdownToggle, dropdownMenu);
                });

                // 鍵盤事件處理 (Enter 或 空白鍵 打開/關閉)
                dropdownToggle.addEventListener('keydown', function (event) {
                    if (event.key === 'Enter' || event.key === ' ') {
                        event.preventDefault();
                        toggleDropdown(dropdownToggle, dropdownMenu);
                    }
                });

                // 當焦點進入下拉選單時自動打開
                dropdownToggle.addEventListener('focus', function () {
                    openDropdown(dropdownToggle, dropdownMenu);
                });

                // Tab 鍵在選單上循環時關閉選單
                dropdownMenu.addEventListener('keydown', function (event) {
                    if (event.key === 'Escape') {
                        closeDropdown(dropdownToggle, dropdownMenu);
                    }
                });
            });

            function toggleDropdown(toggleElement, menuElement) {
                const isExpanded = toggleElement.getAttribute('aria-expanded') === 'true';

                // 關閉所有下拉選單
                closeAllDropdowns();

                if (!isExpanded) {
                    toggleElement.setAttribute('aria-expanded', 'true');
                    menuElement.style.display = 'block';
                }
            }

            function openDropdown(toggleElement, menuElement) {
                closeAllDropdowns();  // 打開新選單前先關閉其他選單
                toggleElement.setAttribute('aria-expanded', 'true');
                menuElement.style.display = 'block';
            }

            function closeDropdown(toggleElement, menuElement) {
                toggleElement.setAttribute('aria-expanded', 'false');
                menuElement.style.display = 'none';
            }

            function closeAllDropdowns() {
                dropdownToggles.forEach(toggle => {
                    const menu = toggle.nextElementSibling;
                    toggle.setAttribute('aria-expanded', 'false');
                    menu.style.display = 'none';
                });
            }
        });
    </script>

