@{
    Layout = "~/Views/Shared/_TissMaster.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="~/bootstrap/js/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    @*<script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>*@
</head>
<body>
    <form id="editForm" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="editorContent">內容:</label>
            <textarea class="form-control" name="textContent" id="editorContent" style="width: 800px;"></textarea>
        </div>
        <div class="form-group">
            <label for="imagePath">上傳圖片:</label>
            <input type="file" class="form-control-file" name="imagePath" id="imagePath" />
        </div>

        <button type="button" id="saveBtn" class="btn btn-primary btn-block">保存修改</button>
    </form>
    <script>
        $(document).ready(function () {
            $('#saveBtn').click(function () {
                var fileInput = document.getElementById('imagePath');
                var file = fileInput.files[0];
                var reader = new FileReader();

                reader.onload = function (e) {
                    var base64Image = e.target.result.split(',')[1]; // 取得 Base64 字串部分
                    saveData(base64Image); // 呼叫保存數據函數，並傳遞圖片的 Base64 字串
                };

                reader.readAsDataURL(file); // 讀取並轉換圖片為 Base64 字串
            });
        });

        function saveData(base64Image) {
            var formData = new FormData();
            formData.append('textContent', $('#editorContent').val());
            formData.append('imagePath', base64Image);
            debugger;
            $.ajax({
                url: 'SavePageData',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (data) {
                    console.log(data);
                    if (data.success) {
                        alert('資料已成功保存!');
                    } else {
                        alert('保存資料時發生錯誤: ' + data.error);
                    }
                },
                error: function (xhr, status, error) {
                    alert('發生錯誤, 請稍後再試.');
                }
            });
        }
    </script>
</body>
</html>
