@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>登入</title>
    <link rel="icon" href="~/Img/favicon.svg" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #1A2A4F;
        }

        .login-container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="text-center">
            <img src="~/Img/logo.svg" alt="Logo" style="height: 45px; width: 100%;">
        </div>
        <form action="/Tiss/Login" method="post">
            <div class="form-group">
                <label for="Username">帳號</label>
                <input type="text" class="form-control" id="Username" name="Username" placeholder="請輸入帳號" required>
            </div>
            <div class="form-group">
                <label for="Password">密碼</label>
                <input type="password" class="form-control" id="pwd" name="pwd" placeholder="請輸入密碼" required>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe">
                <label class="form-check-label" for="RememberMe">記住帳號</label>
            </div>
            <button type="submit" class="btn btn-primary btn-block">登入</button>
        </form>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
    </div>
</body>
</html>