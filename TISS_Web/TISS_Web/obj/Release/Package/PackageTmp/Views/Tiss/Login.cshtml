@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>登入</title>
    <link rel="icon" href="~/Img/favicon.svg" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #1A2A4F;
        }

        .login-container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        @if (TempData["RegisterMessage"] != null)
        {
            <script type="text/javascript">
                alert('@TempData["RegisterMessage"]');
            </script>
        }
        <div class="text-center">
            <img src="~/Img/logo.svg" style="height: 45px; width: 100%;">
        </div>
        <form action="/Tiss/Login" method="post">
            <div class="form-group">
                <label for="Username" title="帳號">帳號</label>
                <input type="text" class="form-control" id="Username" name="Username" placeholder="請輸入帳號" required>
            </div>
            <div class="form-group">
                <label for="Password" title="密碼">密碼</label>
                <input type="password" class="form-control" id="pwd" name="pwd" placeholder="請輸入密碼" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block" title="登入">登入</button>
        </form>
        <div class="text-center mt-3">
            <a href="/Tiss/Register" title="註冊帳號">註冊帳號</a>
        </div>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        <hr>
        <div class="text-center">
            <a href="/Tiss/ForgotPassword" class="btn btn-link" title="忘記密碼">忘記密碼</a>
        </div>
    </div>
</body>
</html>