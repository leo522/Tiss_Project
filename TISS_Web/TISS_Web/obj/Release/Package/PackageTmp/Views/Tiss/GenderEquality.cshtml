                                <span id="Methods" class="anchor">
                                </span>
                                <span id="Plan" class="anchor">
                                </span>
                                <span id="Budget" class="anchor">
                                </span>
                                <span id="Download" class="anchor">
                                </span>
                                <span id="Purchase" class="anchor">
                                </span>
                                <span id="Other" class="anchor">
                                </span>
                                <div class="content">
                                    <div class="subTitle" title="性別平等專區">
                                        性別平等專區
                                        <span class="primary" title="Gender Equality">Gender Equality</span>
                                    </div>
                                    <div style="font-size:2rem; " title="本中心性騷擾申訴管道">
                                        <strong>本中心性騷擾申訴管道</strong>
                                    </div>
                                    <img src="~/Img/性別平等圖片/申訴.jpg" title="本中心性騷擾申訴管道圖片" style="margin-top: 20px;"/><hr />
                                    <div class="infoList" style="margin-top: 20px;">
                                        <div class="el-auto-resizer" style="width: 100%; height: 100%;">
                                            <div class="el-table-v2 el-table-v2__root"
                                                 style="height: 180px; width: 870px;">
                                                <div class="el-table-v2__table el-table-v2__main">
                                                    <div class="el-vl__wrapper el-table-v2__body" role="rowgroup">
                                                        <div style="font-size:2rem; " title="本中心法規">
                                                            <strong>本中心法規</strong>
                                                        </div>
                                                        <div class="el-table-v2__header-wrapper" role="rowgroup">
                                                            <div class="el-table-v2__header" style="height: 50px;">
                                                                <div class="el-table-v2__header-row TableRow el-table-v2__dynamic-header-row"
                                                                     style="height: 50px;">
                                                                    <div class="el-table-v2__header-cell"
                                                                         data-key="title" role="columnheader"
                                                                         style="width: 480px;">
                                                                        <div class="el-table-v2__header-cell-text"
                                                                             title="名稱">名稱</div>
                                                                    </div>
                                                                    <div class="el-table-v2__header-cell"
                                                                         data-key="publish_up" role="columnheader"
                                                                         style="width: 240px;">
                                                                        <div class="el-table-v2__header-cell-text"
                                                                             title="發布日期">發布日期</div>
                                                                    </div>
                                                                    <div class="el-table-v2__header-cell"
                                                                         data-key="params" role="columnheader"
                                                                         style="width: 280px;">
                                                                        <div class="el-table-v2__header-cell-text"
                                                                             title="附件">附件</div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        @foreach (var file in Model)
                                                        {
                                                            <div class="el-table-v2__row TableRow"
                                                                 style="margin-bottom: 20px; padding: 5px;">
                                                                <div class="el-table-v2__row-cell"
                                                                     style="width: 480px;">
                                                                    <a href="~/storage/media/attachments/@file.DocumentName"
                                                                       target="_blank"
                                                                       title="@file.DocumentName">
                                                                        <div class="el-table-v2__cell-text"
                                                                             title="@file.DocumentName">@file.DocumentName.Substring(0, file.DocumentName.LastIndexOf('.'))</div>
                                                                        </a>
                                                                    </div>
                                                                    <div class="el-table-v2__row-cell"
                                                                         style="width: 240px;">
                                                                        <div>
                                                                            @file.UploadTime.ToString("yyyy/MM/dd")
                                                                        </div>
                                                                    </div>
                                                                    <div class="el-table-v2__row-cell"
                                                                         style="width: 280px;">
                                                                        <div class="BaseTagList download">
                                                                            <span class="el-tag el-tag--light is-round">
                                                                                <span class="el-tag__content">@file.DocumentType</span>
                                                                            </span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- 新增的相關法規區塊 -->
                                            <div class="section law-regulation" style="font-size: 2rem; margin-top: 20px;">
                                                <strong>相關法規</strong>
                                            </div>
                                            <div style="font-size:20px">
                                                <ul>
                                                    <li><a href="https://law.moj.gov.tw/LawClass/LawAll.aspx?PCode=N0030014">性別平等工作法</a></li>
                                                    <li><a href="https://law.moj.gov.tw/LawClass/LawAll.aspx?PCode=D0050074">性騷擾防治法</a></li>
                                                </ul>
                                            </div>
                                                
                                            <!-- 新增的相關網站區塊 -->
                                            <div class="section related-websites" style="font-size:2rem">
                                                <strong>相關網站</strong>
                                            </div>
                                            <div style="font-size: 20px ">
                                                <ul>
                                                    <li><a href="https://gec.ey.gov.tw/Index.aspx">行政院性別平等會</a></li>
                                                    <li><a href="https://depart.moe.edu.tw/gender/Default.aspx">教育部性別平等專區</a></li>
                                                    <li><a href="https://www.sa.gov.tw/PageContent?n=3533">教育部體育署性別主流化專區</a></li>
                                                </ul>
                                            </div>

                                            @{
                                                if (Session["LoggedIn"] != null && (bool)Session["LoggedIn"])
                                                {
                                                    using (Html.BeginForm("UploadGenderEqualityDocument", "Tiss", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                                    {
                                                        <label for="file" class="control-label col-md-2" title="選擇檔案">選擇檔案</label>
                                                        <div class="col-md-10">
                                                            <input type="file" name="file" id="file" />
                                                        </div>
                                                        <div class="col-md-10">
                                                            <button type="submit" class="btn btn-primary">上傳</button>
                                                        </div>
                                                    }
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </main>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            var isLoggedIn = '@Session["LoggedIn"]' == 'True';

            if (isLoggedIn) {
                $('#logoutBtn').show(); //顯示登出按鈕
            } else {
                $('#loginBtn').show(); //顯示登入按鈕
            }
            loadContent(); //加載已儲存的內容
        });

        //顯示當前被選擇的子目錄
        document.addEventListener('DOMContentLoaded', function () {
            var currentUrl = window.location.pathname;
            var menuLinks = document.querySelectorAll('.MenuLink');

            menuLinks.forEach(function (link) {

                if (link.getAttribute('href') === currentUrl) {
                    link.classList.add('active');
                }
            });
        });
    </script>
